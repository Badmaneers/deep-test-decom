<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/root"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="always">
        <TextView
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:id="@+id/status_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"/>
        <TextView
            android:textSize="16dp"
            android:textColor="#000000"
            android:gravity="center"
            android:id="@+id/status_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/status_message"
            android:layout_centerHorizontal="true"
            android:lineSpacingExtra="8dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"/>
        <TextView
            android:textSize="16dp"
            android:textColor="#00925f"
            android:id="@+id/start_unlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="150dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
        <Button
            android:textSize="16dp"
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:text="@string/status_ok"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            style="?attr/colorButtonColorfulDefaultStyle"/>
    </RelativeLayout>
    <color.support.design.widget.ColorAppBarLayout
        android:id="@+id/colorAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <color.support.p043v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:paddingTop="@dimen/toolbar_margin_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/toolbar_height"
            app:colorLayoutScrollFlags="exitUntilCollapsed|scroll"
            app:supportTitleTextAppearance="@style/textAppearanceSecondTitle"/>
        <View
            android:layout_gravity="center_horizontal"
            android:id="@+id/divider_line"
            android:background="?attr/colorDividerBackgroundColor"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_background_height"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/common_margin"
            android:alpha="0"
            android:forceDarkAllowed="false"/>
    </color.support.design.widget.ColorAppBarLayout>
</RelativeLayout>
