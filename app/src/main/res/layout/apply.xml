<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="500dp">
        <TextView
            android:textSize="16dp"
            android:id="@+id/disclaimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:lineSpacingExtra="8dp"
            android:textAlignment="viewStart"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"/>
    </ScrollView>
    <Button
        android:textSize="16dp"
        android:textStyle="bold"
        android:id="@+id/agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:text="@string/apply_submit"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        style="?attr/colorButtonColorfulDefaultStyle"/>
    <CheckBox
        android:id="@+id/check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="515dp"
        android:layout_marginStart="15dp"/>
    <TextView
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="515dp"
        android:text="@string/apply_agree"
        android:lineSpacingExtra="8dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="15dp"/>
    <color.support.design.widget.ColorAppBarLayout
        android:id="@+id/colorAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <color.support.p043v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:paddingTop="@dimen/toolbar_margin_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/toolbar_height"
            app:colorLayoutScrollFlags="exitUntilCollapsed|scroll"
            app:supportTitleTextAppearance="@style/textAppearanceSecondTitle"/>
        <View
            android:layout_gravity="center_horizontal"
            android:id="@+id/divider_line"
            android:background="?attr/colorDividerBackgroundColor"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_background_height"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/common_margin"
            android:alpha="0"
            android:forceDarkAllowed="false"/>
    </color.support.design.widget.ColorAppBarLayout>
</RelativeLayout>
